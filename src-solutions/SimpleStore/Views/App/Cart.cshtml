<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix cartListWrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="cartListInner">
                    <form action="#">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Product Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Sub Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.CartUser.Products)
                                    {

                                        <tr>
                                            <td class="col-xs-2">
                                                 
                                                    <a asp-controller="app" asp-action="removeItem" class="close" asp-route-id="@item.Id"
                                                       data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></a>
                                                    <span class="cartImage"><img src="~/@item.ImageUrl" alt="cart-Image" width="80px"></span>
                                            </td>

                                            <td class="col-xs-4">@item.Name</td>
                                            <td class="col-xs-2">&euro;@item.Price </td>
                                            <td class="col-xs-2">@item.Qty</td>
                                            <td class="col-xs-2">&euro;@(item.Price * item.Qty) </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row totalAmountArea" style="margin-left: 0px;">
                            <div class="col-sm-4 col-sm-offset-8 col-xs-12">
                                <ul class="list-unstyled">
                                    <li>Grand Total <span class="grandTotal">&euro;@ViewBag.CartUser.Total </span></li>
                                </ul>
                            </div>
                        </div>
                        <div class="checkBtnArea">
                            
                            <a asp-controller="app" asp-action="buynow" class="btn btn-primary btn-block">checkout<i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
