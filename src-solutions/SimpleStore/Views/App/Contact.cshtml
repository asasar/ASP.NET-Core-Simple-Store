@model SimpleStore.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact Page";
}
@section script {
     <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
     <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<section class="mainContent clearfix stepsWrapper">
    <div class="container">
        <h2>Contact Page</h2>
        <form role="form" class="form-inline" method="post">
            <span asp-validation-summary="ModelOnly"></span>
            <div class="col-xs-12">
                <div class="page-header">
                    @if (ViewBag.UserMessage != null)
                    {
                        <div class="alert alert-success"><h4>@ViewBag.UserMessage</h4></div>
                    }
                </div>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group col-sm-6 col-xs-12">
                <label asp-for="Message">Message</label>
                <textarea class="form-control" cols="40" rows="4" asp-for="Message"></textarea>
                <span asp-validation-for="Message"></span>
            </div>
            <div class="col-xs-12">
                <div>
                    <input type="submit" class="btn btn-primary" value="Send me" />
                </div>
            </div>
        </form>
    </div>
</section>