<!DOCTYPE html>
<html lang="en">
<head>
    <!-- SITE TITTLE -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Simple Store @ViewBag.Title</title>
    <!-- PLUGINS CSS STYLE -->
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/jquery-ui/themes/ui-lightness/jquery-ui.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/plugins/selectbox/select_option1.css" rel="stylesheet">
    <!-- CUSTOM CSS -->
    <link href="~/css/style.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
        
     <script src="http://www.atmrum.net/rum.js"></script>
     <script>rum.start("1156b6e7d9e3320fa325f74ca4680d70");</script>

</head>

<body>
    <div class="main-wrapper">
        <!-- HEADER -->
        <div class="header clearfix">
            <!-- TOPBAR -->
            <div class="topBar">
                <div class="container">
                    <div class="row">
                        <div class="">
                            <ul class="list-inline pull-right">
                                @if (ViewBag.CartUser != null)
                                {
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-shopping-cart"></i>>&euro;@ViewBag.CartUser.Total</a>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            <li>Item(s) in your cart</li>

                                            @foreach (SimpleStore.Models.ProductCart item in ViewBag.CartUser.Products)
                                            {

                                                <li>
                                                    <a asp-controller="app" asp-action="infoproduct" asp-route-id="@item.Id">
                                                        <div class="media">
                                                            <img class="media-left media-object" src="~/@item.ImageUrl" alt="cart-Image" width="80px">
                                                            <div class="media-body">
                                                                <h5 class="media-heading">@item.Name<br><span>@item.Qty X &euro;@item.Price</span></h5>
                                                            </div>
                                                        </div>
                                                    </a>
                                                </li>

                                            }
                                            <li>
                                                <div class="btn-group" role="group" aria-label="...">
                                                    <a asp-controller="app" asp-action="Cart">
                                                        <button type="button" class="btn btn-default">Cart</button>
                                                    </a>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- NAVBAR -->
            <nav class="navbar navbar-main navbar-default" role="navigation">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/"><img src="~/img/logo.png" alt=""></a>
                    </div>
                    <!-- Top Menu -->
                    <div class="collapse navbar-collapse navbar-ex1-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a asp-controller="app" asp-action="Index">Home</a></li>
                            <li><a asp-controller="app" asp-action="Contact">Contact</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a asp-controller="Admin" asp-action="Index">@User.Identity.Name;</a></li>
                                <li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Auth" asp-action="Login">Log in</a></li>

                                <li><a asp-controller="Auth" asp-action="Signup">Create an account</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        @RenderBody()
        <!-- COPY RIGHT -->
        <div class="copyRight clearfix">
            <div class="container">
                <div class="row">
                    <div class="col-sm-7 col-xs-12">
                        <p>&copy; 2016 Copyright Bootstrap Template by <a target="_blank" href="http://www.iamabdus.com/">Abdus</a>.</p>
                        <p>&copy; 2016 CoreNet C# implementation <a target="_blank" href="https://github.com/asasar/">Alexis Salinas</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    @RenderSection("script", false)
</body>
</html>
